/**
 * Pass-through to admin.inc
 */
function panels_page_passthru() {
  $args = func_get_args();
  $callback = array_shift($args);

  include_once './' . panels_get_path('panels_page/panels_page.admin.inc');
  return call_user_func_array($callback, $args);
}

