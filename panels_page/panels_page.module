/**
 * Page callback to view a panel page.
 */
function panels_page_view_page($panel_page) {
  if (!is_object($panel_page)) {
    $panel_page = panels_page_load($panel_page);
  }
  if (!$panel_page) {
    return drupal_not_found();
  }
  
  $args = func_get_args();
  array_shift($args); // remove the name.

  $panel_page->contexts = array();
  if ($panel_page->arguments) {
    foreach ($panel_page->arguments as $i => $argument) {
      $def = panels_get_argument($argument['name']);
      $context = NULL;
      if (function_exists($def['context']) && isset($args[$i])) {
        $context = $def['context']($args[$i], $argument['argument_settings']);
      }

      if (!empty($context)) {
        $panel_page->contexts[$i] = $context;
      }
      else {
        // handle default case
        if ($argument['default'] == '404') {
          return drupal_not_found();
        }
        // Handle 'new display' case.
      }
    }
  }

  // This is the first point at which it is save to add items to the display
  // as the argument handling, above, may choose which display is actually
  // used.
  $panel_page->display->args = $args;
  $panel_page->display->context = $panel_page->contexts;
  $panel_page->display->css_id = $panel_page->css_id;

  $output = panels_render_display($panel_page->display);

  // set title afterward to ensure title is retained.
  if ($output == NULL) {
    watchdog('panels', t('Unable to find requested layout %s', array('%s' => check_plain($panel_page->display->layout))));
    return drupal_not_found();
  }

  drupal_set_title(filter_xss_admin(panels_page_get_title($panel_page, 'page', '')));

  if ($panel_page->css) {
    drupal_set_html_head("<style type=\"text/css\" media=\"all\">" . filter_xss_admin($panel_page->css) . "</style>\n");
  }
  if ($panel_page->no_blocks) {
    print theme('page', $output, FALSE);
  }
  else {
    return $output;
  }
}

